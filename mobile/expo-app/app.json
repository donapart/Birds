{
  "expo": {
    "name": "BirdSound",
    "slug": "birdsound",
    "version": "5.6.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": false,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.birdsound.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "BirdSound benötigt Mikrofonzugriff für die Vogelstimmen-Aufnahme.",
        "NSLocationWhenInUseUsageDescription": "BirdSound nutzt den Standort für die Geo-Filterung der Vogelarten.",
        "UIBackgroundModes": ["audio", "location", "fetch", "processing"]
      }
    },
    "android": {
      "package": "com.birdsound.app",
      "versionCode": 57,
      "usesCleartextTraffic": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "permissions": [
        "RECORD_AUDIO",
        "MODIFY_AUDIO_SETTINGS",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_MICROPHONE",
        "WAKE_LOCK",
        "INTERNET",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "BirdSound benötigt Mikrofonzugriff für die Vogelstimmen-Aufnahme."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "BirdSound nutzt den Standort für die Geo-Filterung der Vogelarten.",
          "locationAlwaysAndWhenInUsePermission": "BirdSound nutzt den Standort im Hintergrund für kontinuierliche Vogelerkennung.",
          "isAndroidBackgroundLocationEnabled": true,
          "isIosBackgroundLocationEnabled": true
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "birdsound-local"
      }
    }
  }
}
