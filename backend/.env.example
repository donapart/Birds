# Application Settings
APP_NAME=BirdSound API
APP_VERSION=0.1.0
DEBUG=false

# Database (PostgreSQL with PostGIS)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/birdsound

# Audio Processing
AUDIO_SAMPLE_RATE=48000
AUDIO_WINDOW_SIZE_SEC=3.0
AUDIO_HOP_SIZE_SEC=1.0

# Model Configuration
# Download from: https://huggingface.co/kahst/BirdNET-onnx
BIRDNET_MODEL_PATH=models/birdnet/BirdNET_GLOBAL_6K_V2.4_Model_FP32.onnx
BIRDNET_LABELS_PATH=models/birdnet/BirdNET_GLOBAL_6K_V2.4_Labels.txt

# HuggingFace model (will be downloaded automatically)
HF_MODEL_NAME=dima806/bird_sounds_classification

# Prediction Settings
MIN_CONFIDENCE_THRESHOLD=0.1
TOP_N_PREDICTIONS=5

# Geographic Filtering (Berlin, Germany)
DEFAULT_LAT=52.52
DEFAULT_LON=13.405

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=["*"]
