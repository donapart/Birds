# Application Settings
APP_NAME=BirdSound API
APP_VERSION=0.1.0
DEBUG=false

# API Security
# Comma-separated list of valid API keys
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=["changeme-in-production"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Database (PostgreSQL with PostGIS or SQLite fallback)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/birdsound
USE_SQLITE=false
SQLITE_PATH=birdsound.db

# Audio Processing
AUDIO_SAMPLE_RATE=48000
AUDIO_WINDOW_SIZE_SEC=3.0
AUDIO_HOP_SIZE_SEC=1.0

# Model Configuration
# Toggle between stub models (testing) and runtime models (production)
# true  = Use lightweight stubs (fast, no model files needed)
# false = Use real ML models (requires downloading models first)
USE_MODEL_STUBS=true

# BirdNET Model Paths (only needed when USE_MODEL_STUBS=false)
# Download with: python scripts/download_models.py
# Or from: https://huggingface.co/kahst/BirdNET-onnx
BIRDNET_MODEL_PATH=models/birdnet/BirdNET_GLOBAL_6K_V2.4_Model_FP32.onnx
BIRDNET_LABELS_PATH=models/birdnet/BirdNET_GLOBAL_6K_V2.4_Labels.txt

# HuggingFace model (only needed when USE_MODEL_STUBS=false)
# Will be downloaded automatically on first use
HF_MODEL_NAME=dima806/bird_sounds_classification

# Prediction Settings
MIN_CONFIDENCE_THRESHOLD=0.1
TOP_N_PREDICTIONS=5

# Geographic Filtering (Berlin, Germany)
DEFAULT_LAT=52.52
DEFAULT_LON=13.405

# CORS (comma-separated list of allowed origins)
CORS_ORIGINS=["*"]
